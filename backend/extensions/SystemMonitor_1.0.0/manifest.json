{
  "name": "SystemMonitor",
  "version": "1.0.0",
  "type": "widget",
  "description": "Real-time system monitoring widget with CPU, memory, disk, and network metrics",
  "author": "Kilo Code",
  "backend_entry": "system_monitor.py",
  "frontend_entry": "SystemMonitor.vue",
  "frontend_editor": "SystemMonitorEditor.vue",
  "dependencies": {
    "psutil": ">=5.9.0"
  },
  "permissions": ["system_read", "database_write"],
  "config_schema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "title": "Widget Title",
        "default": "System Monitor"
      },
      "displayMode": {
        "type": "string",
        "title": "Display Mode",
        "enum": ["compact", "detailed", "chart"],
        "default": "detailed"
      },
      "metrics": {
        "type": "array",
        "title": "Enabled Metrics",
        "items": {
          "type": "string",
          "enum": ["cpu", "memory", "disk", "network"]
        },
        "default": ["cpu", "memory", "disk"]
      },
      "refreshInterval": {
        "type": "number",
        "title": "Refresh Interval (seconds)",
        "minimum": 5,
        "maximum": 300,
        "default": 30
      },
      "backgroundColor": {
        "type": "string",
        "title": "Background Color",
        "format": "color",
        "default": "#ffffff"
      },
      "textColor": {
        "type": "string",
        "title": "Text Color",
        "format": "color",
        "default": "#333333"
      },
      "chartType": {
        "type": "string",
        "title": "Chart Type",
        "enum": ["line", "area", "bar"],
        "default": "line"
      },
      "showHistory": {
        "type": "boolean",
        "title": "Show Historical Data",
        "default": true
      },
      "historyHours": {
        "type": "number",
        "title": "History Hours",
        "minimum": 1,
        "maximum": 168,
        "default": 24
      },
      "alerts": {
        "type": "object",
        "title": "Alert Thresholds",
        "properties": {
          "cpuWarning": {
            "type": "number",
            "title": "CPU Warning Threshold (%)",
            "default": 80,
            "minimum": 1,
            "maximum": 100
          },
          "cpuCritical": {
            "type": "number",
            "title": "CPU Critical Threshold (%)",
            "default": 95,
            "minimum": 1,
            "maximum": 100
          },
          "memoryWarning": {
            "type": "number",
            "title": "Memory Warning Threshold (%)",
            "default": 85,
            "minimum": 1,
            "maximum": 100
          },
          "memoryCritical": {
            "type": "number",
            "title": "Memory Critical Threshold (%)",
            "default": 95,
            "minimum": 1,
            "maximum": 100
          },
          "diskWarning": {
            "type": "number",
            "title": "Disk Warning Threshold (%)",
            "default": 90,
            "minimum": 1,
            "maximum": 100
          }
        }
      }
    }
  },
  "permissions": []
}