{
  "name": "PagesExtension",
  "version": "1.0.0",
  "type": "extension",
  "description": "A pages management extension for creating, editing, and managing custom pages",
  "author": "Kilo Code",
  "backend_entry": "pages_extension.py",
  "frontend_entry": "PagesExtension.vue",
  "frontend_editor": "PagesExtensionEditor.vue",
  "frontend_components": ["PageView.vue"],
  "dependencies": {},
  "permissions": ["database_read", "database_write"],
  "config_schema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "title": "Extension Title",
        "default": "Pages Management"
      },
      "defaultPublic": {
        "type": "boolean",
        "title": "Default to Public Pages",
        "default": true
      },
      "maxPages": {
        "type": "number",
        "title": "Maximum Pages per User",
        "minimum": 1,
        "maximum": 1000,
        "default": 100
      }
    }
  }
}
