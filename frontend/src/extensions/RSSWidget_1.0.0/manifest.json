{
  "name": "RSSWidget",
  "version": "1.0.0",
  "type": "widget",
  "description": "An RSS feed widget for displaying news and updates",
  "author": "Kilo Code",
  "frontend_entry": "RSSWidget.vue",
  "frontend_editor": "RSSWidgetEditor.vue",
  "config_schema": {
    "type": "object",
    "properties": {
      "feed_url": {
        "type": "string",
        "title": "Feed URL",
        "format": "uri",
        "default": ""
      },
      "items_limit": {
        "type": "number",
        "title": "Items Limit",
        "minimum": 1,
        "maximum": 20,
        "default": 5
      }
    }
  }
}